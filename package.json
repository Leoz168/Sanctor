{
  "name": "sanctor-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Sanctor Monorepo - Go Backend + React Frontend",
  "scripts": {
    "dev": "docker-compose -f docker-compose.dev.yml up",
    "dev:build": "docker-compose -f docker-compose.dev.yml up --build",
    "start": "docker-compose up",
    "build": "docker-compose build",
    "down": "docker-compose down",
    "logs": "docker-compose logs -f",
    "backend:dev": "cd apps/api && go run cmd/api/main.go",
    "frontend:dev": "cd apps/web && npm run dev",
    "frontend:install": "cd apps/web && npm install"
  },
  "workspaces": [
    "apps/api",
    "apps/web",
    "packages/*"
  ],
  "author": "",
  "license": "MIT"
}
